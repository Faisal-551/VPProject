@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1>📊 Admin Dashboard</h1>
                <div>
                    <span class="me-3">
                        Welcome, <strong>@Context.Session.GetString("AdminName")</strong>
                    </span>
                    <a asp-action="Profile" class="btn btn-outline-primary btn-sm me-2">Profile</a>
                    <a asp-action="Logout" class="btn btn-outline-danger btn-sm">Logout</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-white bg-primary mb-3">
                <div class="card-body">
                    <h5 class="card-title">Products</h5>
                    <h2>@ViewBag.TotalProducts</h2>
                    <a asp-controller="Products" asp-action="Index" class="text-white text-decoration-none">View All →</a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success mb-3">
                <div class="card-body">
                    <h5 class="card-title">Categories</h5>
                    <h2>@ViewBag.TotalCategories</h2>
                    <a asp-controller="Categories" asp-action="Index" class="text-white text-decoration-none">View All →</a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-info mb-3">
                <div class="card-body">
                    <h5 class="card-title">Customers</h5>
                    <h2>@ViewBag.TotalCustomers</h2>
                    <a asp-controller="Customers" asp-action="Index" class="text-white text-decoration-none">View All →</a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-warning mb-3">
                <div class="card-body">
                    <h5 class="card-title">Orders</h5>
                    <h2>@ViewBag.TotalOrders</h2>
                    <a asp-controller="Orders" asp-action="Index" class="text-white text-decoration-none">View All →</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Revenue Card -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card text-white bg-dark">
                <div class="card-body">
                    <h5 class="card-title">Total Revenue</h5>
                    <h2>$@ViewBag.TotalRevenue.ToString("N2")</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Quick Actions</h5>
                </div>
                <div class="card-body">
                    <a asp-controller="Products" asp-action="Create" class="btn btn-primary me-2">➕ Add Product</a>
                    <a asp-controller="Categories" asp-action="Create" class="btn btn-success me-2">➕ Add Category</a>
                    <a asp-controller="Orders" asp-action="Index" class="btn btn-info me-2">📦 Manage Orders</a>
                    <a asp-controller="Customers" asp-action="Index" class="btn btn-warning">👥 View Customers</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Recent Orders -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Recent Orders</h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.RecentOrders != null && ViewBag.RecentOrders.Count > 0)
                    {
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Order ID</th>
                                    <th>Customer</th>
                                    <th>Amount</th>
                                    <th>Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in ViewBag.RecentOrders)
                                {
                                    <tr>
                                        <td>#@order.OrderId</td>
                                        <td>@order.Customer.CustomerName</td>
                                        <td>$@order.TotalAmount.ToString("N2")</td>
                                        <td>@order.OrderDate.ToString("MM/dd/yyyy")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="text-muted">No recent orders</p>
                    }
                </div>
            </div>
        </div>

        <!-- Top Products -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">Products Overview</h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.TopProducts != null && ViewBag.TopProducts.Count > 0)
                    {
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Category</th>
                                    <th>Price</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var product in ViewBag.TopProducts)
                                {
                                    <tr>
                                        <td>@product.ProductName</td>
                                        <td>@product.Category.CategoryName</td>
                                        <td>$@product.Price.ToString("N2")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="text-muted">No products available</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        transition: transform 0.2s;
    }

        .card:hover {
            transform: translateY(-5px);
        }
</style>
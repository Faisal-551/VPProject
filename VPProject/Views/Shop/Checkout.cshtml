@model VPProject.Models.Customer

@{
    ViewData["Title"] = "Checkout";
}

<div class="container">
    <div class="row mb-4">
        <div class="col-12">
            <h1>💳 Checkout</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Shop</a></li>
                    <li class="breadcrumb-item"><a asp-action="Cart">Cart</a></li>
                    <li class="breadcrumb-item active">Checkout</li>
                </ol>
            </nav>
        </div>
    </div>

    <form method="post" asp-action="PlaceOrder">
        @Html.AntiForgeryToken()

        <div class="row">
            <div class="col-md-7">
                <!-- Delivery Information -->
                <div class="card mb-3">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">📍 Delivery Information</h5>
                    </div>
                    <div class="card-body">
                        <dl class="row mb-0">
                            <dt class="col-sm-4">Name:</dt>
                            <dd class="col-sm-8">@Model.CustomerName</dd>

                            <dt class="col-sm-4">Phone:</dt>
                            <dd class="col-sm-8">@Model.Phone</dd>

                            <dt class="col-sm-4">Address:</dt>
                            <dd class="col-sm-8">@Model.Address</dd>
                        </dl>
                    </div>
                </div>

                <!-- Payment Method -->
                <div class="card">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">💰 Payment Method</h5>
                    </div>
                    <div class="card-body">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="paymentMethod" id="cod" value="cod" checked>
                            <label class="form-check-label" for="cod">
                                <strong>Cash on Delivery</strong>
                            </label>
                        </div>
                        <small class="text-muted">Pay with cash when your order is delivered</small>
                    </div>
                </div>
            </div>

            <div class="col-md-5">
                <!-- Order Summary -->
                <div class="card">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0">📦 Order Summary</h5>
                    </div>
                    <div class="card-body">
                        <h6 class="mb-3">Items in your order:</h6>
                        @foreach (var item in ViewBag.CartItems)
                        {
                            <div class="d-flex justify-content-between mb-2">
                                <div>
                                    <strong>@item.Product.ProductName</strong><br />
                                    <small class="text-muted">Qty: @item.Quantity × $@item.Price.ToString("N2")</small>
                                </div>
                                <div class="text-end">
                                    <strong>$@((item.Quantity * item.Price).ToString("N2"))</strong>
                                </div>
                            </div>
                            <hr class="my-2" />
                        }

                        <div class="d-flex justify-content-between mb-2">
                            <span>Subtotal:</span>
                            <strong>$@ViewBag.Total.ToString("N2")</strong>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Delivery:</span>
                            <strong>Free</strong>
                        </div>
                        <hr />
                        <div class="d-flex justify-content-between mb-4">
                            <h5>Total:</h5>
                            <h5 class="text-primary">$@ViewBag.Total.ToString("N2")</h5>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg">✓ Place Order</button>
                            <a asp-action="Cart" class="btn btn-outline-secondary">← Back to Cart</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>